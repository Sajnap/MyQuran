<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bodyy"
    tools:context="com.example.copyfile.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="About the App"
        android:textColor="#5F8EBF"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:textColor="#E0DA7C"
        android:minLines="10"
        android:singleLine="false"
        android:text="This application contains all the chapters of the Quran, Adkar, Prayer time and Zakkat Calculator. Adkar help muslims read their daily prayers. And provides islamic prayer times. Also calculation of Zakat varies for different assets and liabilities." />

</RelativeLayout>